<div class="container container-top">
  <div class="row">
    <div class="question">
      <%= @question.capitalize %>
      <p><em>- You</em></p>
    </div>
  </div>
  <div class="row">
    <div class="answer">
      <%= @answer %>
      <p><em>- Your coach</em></p>
    </div>
  </div>
  <div class="row">
    <%= link_to "Ask a new question", ask_path %>
  </div>
</div>
